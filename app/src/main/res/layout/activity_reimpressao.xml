<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/AbsoluteLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WHITE">


    <Button
        android:id="@+id/btnDow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="4dp"
        android:layout_y="559dp"
        android:text="SAIR"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp" />

    <AbsoluteLayout
        android:id="@+id/AbsoluteLayout1"
        android:layout_width="match_parent"
        android:layout_height="465dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000"
            android:text="CLIQUE NO PRODUTOR PARA EDIÇÃO DO RAT  - OU PRESSIONE PARA IMPRIMIR "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/WHITE"
            android:textSize="18dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_x="-1dp"
            android:layout_y="1dp" />

        <CheckBox
            android:text="Impressão Térmica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_x="6dp"
            android:layout_y="23dp"
            android:id="@+id/chkImpressao" />

        <ListView
            android:id="@+id/lstProducers"
            android:layout_width="match_parent"
            android:layout_height="263dp"
            android:layout_x="2dp"
            android:layout_y="132dp"
            android:choiceMode="multipleChoice" >

        </ListView>

        <TextView
            android:text="Horas de atendimento: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lblNumero"
            android:textColor="#000"
            android:textStyle="normal"
            android:textSize="18sp"
            android:layout_marginTop="83dp"
            android:layout_marginLeft="27dp"
            android:layout_x="15dp"
            android:layout_y="71dp" />

        <SeekBar
            android:layout_width="586dp"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:max="20"
            android:layout_marginLeft="20dp"
            android:layout_x="360dp"
            android:layout_y="70dp" />

    </AbsoluteLayout>

</RelativeLayout>
