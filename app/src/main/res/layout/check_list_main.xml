<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/WHITE"
    android:orientation="vertical" >
    
     <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="1100dp"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        
        <TextView
        android:id="@+id/lblLegenda"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#000"
        android:gravity="center_vertical"
        android:text=" * CHECKLIST"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/WHITE"
        android:textSize="15dp"
        android:textStyle="bold" />
    </LinearLayout>
    
      <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="match_parent"
          android:layout_gravity="center_horizontal"
          android:paddingTop="100dp"
          android:gravity="center_vertical"
          android:orientation="vertical" >

    <Button
        android:id="@+id/btnI"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="CONTROLES ZOOTÉCNICOS E CONTROLES GERENCIAS" />

    <Button
        android:id="@+id/btnII"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="MANEJO NUTRICIONAL" />

    <Button
        android:id="@+id/btnIII"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="SANIDADE DO REBANHO" />

    <Button
        android:id="@+id/btnIV"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="MANEJO REPROTUDIVO E MELHORAMENTO GENÉTICO" />

    <Button
        android:id="@+id/btnV"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="QUALIDADE" />
    </LinearLayout>
		
     

</LinearLayout>