<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/WHITE"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"

        android:orientation="vertical" >

        <TextView
            android:id="@+id/data_coleta"
            android:layout_width="601dp"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:gravity="center"
            android:text="EDIÇÃO DO RAT"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/WHITE"
            android:textStyle="bold" />

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/TextView02"
                    android:layout_width="599dp"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:text="CONSULTOR"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/WHITE"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtConsultor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textCapCharacters"
                    android:textColor="#000"
                    android:clickable="false"
                    android:background="#c1c1c1" />

                <Button
                    android:id="@+id/btnSituacao"
                    android:layout_marginTop="100dp"
                    android:layout_width="598dp"
                    android:layout_height="wrap_content"
                    android:text="SITUAÇÃO ENCONTRADA"
                    android:background="#6a6a6a"
                    android:textColor="#fffefe" />

                <Button
                    android:id="@+id/btnRecomendacao"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="598dp"
                    android:layout_height="wrap_content"
                    android:text="RECOMENDAÇÃO"
                    android:background="#6a6a6a"
                    android:textColor="#ffffff"
                    android:layout_marginTop="@dimen/abc_action_bar_progress_bar_size" />

                <Button
                    android:id="@+id/btnSalvarFechamento"
                    android:layout_width="600dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="123dp"
                    android:background="@color/GRAY"
                    android:text="SALVAR RAT"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>