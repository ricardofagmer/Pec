<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/WHITE"
    android:theme="@android:style/Theme.DeviceDefault.Light.DarkActionBar"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="730dp"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="730dp"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/TextView07"
                android:layout_width="801dp"
                android:layout_height="50dp"
                android:background="#000"
                android:gravity="center_vertical"
                android:text="  MANEJO NUTRICIONAL"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/WHITE"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TextView06"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text="1 - POSSUI ÁREA DE PASTAGEM DIMENSIONADA PARA O REBANHO ATUAL?"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/TextView05"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/GRAY"
                android:gravity="center_vertical"
                android:text="2 - POSSUI VOLUMOSO D INVERNO DIMENSIONADO P/ REBANHO ATUAL? (CANA-DE-AÇUCAR/SILAGENS)"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/TextView08"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text="3 - POSSUI SISTEMA DE IRRIGAÇÃO ADEQUADO?"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/GRAY"
                android:gravity="center_vertical"
                android:text="4 - OS ALIMENTOS SÃO PREPARADOS E OFERECIDOS ADEQUADAMENTE?"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/TextView04"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text="5 - OFERTA DIETA EM FUNÇÃO DA CAPACIDADE PRODUTIVA DOS ANIMAIS?"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/TextView03"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/GRAY"
                android:gravity="center_vertical"
                android:text="6 - OS ALIMENTOS SÃO ARMAZENADOS / CONSERVADOS COM SEGURANÇA?"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/lblMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:text="*TODAS PERGUNTAS DEVEM SER RESPONDIDAS"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/ORANGE"
                android:textSize="13dp"
                android:textStyle="bold"
                android:visibility="invisible" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnSalvaManejo"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_weight="0.00"
                android:background="@color/ORANGE"
                android:text="SALVAR"
                android:textColor="@color/WHITE"
                android:textStyle="bold" />
        </LinearLayout>

       
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#000"
            android:gravity="center|left"
            android:text="NÃO     PARCIAL      SIM"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/WHITE"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/ddl4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/WHITE" />
        <Spinner
            android:id="@+id/ddl5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/GRAY" />

        <Spinner
            android:id="@+id/ddl6"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/WHITE" />

        <Spinner
            android:id="@+id/ddl7"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/GRAY" />

        <Spinner
            android:id="@+id/ddl8"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/WHITE" />

        <Spinner
            android:id="@+id/ddl9"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/GRAY" />
 
         <Space
            android:layout_width="match_parent"
            android:layout_height="05dp"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btnCanManejo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0.00"
            android:text="CANCELAR" />

    </LinearLayout>



</LinearLayout>