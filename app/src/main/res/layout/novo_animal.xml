        android:layout_width="109dp"
        android:layout_height="25dp"
        android:layout_x="120dp"
        android:layout_y="179dp"
        android:background="@drawable/round"
        android:spinnerMode="dialog" />

    <Spinner
        android:id="@+id/ddlOrigemEntrada"
        android:layout_width="224dp"
        android:layout_height="25dp"
        android:layout_x="241dp"
        android:layout_y="179dp"
        android:background="@drawable/round"
        android:spinnerMode="dialog" />

    <TextView
        android:id="@+id/TextView07"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="05dp"
        android:layout_y="225dp"
        android:text="RAÇA"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/TextView08"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="120dp"
        android:layout_y="225dp"
        android:text="CATEGORIA"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/TextView09"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_x="244dp"
        android:layout_y="225dp"
        android:text="PELAGEM"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="14sp" />

    <Spinner
        android:id="@+id/ddlRaca"
        android:layout_width="109dp"
        android:layout_height="25dp"
        android:layout_x="05dp"
        android:layout_y="246dp"
        android:background="@drawable/round"
        android:spinnerMode="dialog" />

    <Spinner
        android:id="@+id/ddlCategoria"
        android:layout_width="109dp"
        android:layout_height="25dp"
        android:layout_x="120dp"
        android:layout_y="246dp"
        android:background="@drawable/round"
        android:spinnerMode="dialog" />

    <Spinner
        android:id="@+id/ddlPelagem"
        android:layout_width="225dp"
        android:layout_height="25dp"
        android:layout_x="241dp"
        android:layout_y="246dp"
        android:background="@drawable/round"
        android:spinnerMode="dialog" />

    <TextView
        android:id="@+id/TextView10"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:layout_x="05dp"
        android:layout_y="290dp"
