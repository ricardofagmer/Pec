<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ddlOrigem"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/txtBrincoN"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_x="05dp"
        android:layout_y="65dp"
        android:background="@drawable/round"
        android:ems="10"
        android:inputType="date"
        android:textColor="#000" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/txtNomeN"
        android:layout_width="459dp"
        android:layout_height="30dp"
        android:layout_x="05dp"
        android:layout_y="120dp"
        android:background="@drawable/round"
        android:ems="10"
        android:inputType="textCapCharacters"
        android:textColor="#000" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="05dp"
        android:layout_y="103dp"
        android:text="NOME"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="05dp"
        android:layout_y="160dp"
        android:text="Nº DE PARTOS"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/lblVaca"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:layout_x="05dp"
        android:layout_y="47dp"
        android:text="BRNCO"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="14sp" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_x="77dp"
        android:layout_y="363dp" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="472dp"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:background="#000"
        android:gravity="center"
        android:text="NOVO ANIMAL"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/WHITE"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtDtNascN"
        android:layout_width="195dp"
        android:layout_height="30dp"
        android:layout_x="117dp"
        android:layout_y="65dp"
        android:background="@drawable/round"
        android:ems="10"
        android:inputType="date"
        android:textColor="#000" />

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="120dp"
        android:layout_y="47dp"
        android:text="DT. NASCIMENTO"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="14sp" />

    <ImageButton
        android:id="@+id/btnDataN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="315dp"
        android:layout_y="50dp"
        android:src="@drawable/calendar_icon" />

    <Button
        android:id="@+id/btnCancelaN"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_x="1dp"
        android:layout_y="380dp"
        android:text="Cancelar" />

    <Button
        android:id="@+id/btnSalvarN"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_x="246dp"
        android:layout_y="380dp"
        android:text="SALVAR"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtNpartos"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_x="05dp"
        android:layout_y="179dp"
        android:background="@drawable/round"
        android:ems="10"
        android:inputType="date"
        android:textColor="#000" />

    <TextView
        android:id="@+id/TextView05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="120dp"
        android:layout_y="160dp"
        android:text="SEXO"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="14sp" />

