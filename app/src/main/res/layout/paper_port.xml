<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    
    <FrameLayout 
        android:id="@+id/paperPort"
        android:name="com.pec.biosistemico.pec.Fragment"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>    
     
     <LinearLayout 
        android:id="@+id/layout_middle"       
        android:layout_height="match_parent"
        android:layout_width="400dp"
        android:background="#fff"
        android:layout_gravity="start"
        android:orientation="vertical">  

    <ImageView
        android:id="@+id/btnPrintPec"
        android:layout_width="780dp"
        android:layout_height="100px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingRight="400dp"
        android:src="@drawable/logo" />
    


    <TextView
        android:id="@+id/lblId"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="Cliente"
        android:textAppearance="?android:attr/textAppearanceMedium"
   		android:textColor="@color/black" />

    <Spinner
        android:id="@+id/ddlCliente"
        android:layout_width="400dp"
        android:layout_height="45dp"
       />

    <TextView
        android:id="@+id/lbl_id_FK"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="Projeto"
         android:textColor="@color/black" 
        android:textAppearance="?android:attr/textAppearanceMedium"
       />

    <Spinner
        android:id="@+id/ddlProjeto"
        android:layout_width="400dp"
        android:layout_height="45dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/lblPesoAtual"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="Grupo"
         android:textColor="@color/black"
        android:textAppearance="?android:attr/textAppearanceMedium"
         />

    <Spinner
        android:id="@+id/ddlGrupo"
        android:layout_width="400dp"
        android:layout_height="45dp"
        />

    <TextView
        android:id="@+id/lblDtSecagem"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="Produtor"
        android:textAppearance="?android:attr/textAppearanceMedium"
         android:textColor="@color/black" />

    <Spinner
        android:id="@+id/ddlProdutor"
        android:layout_width="400dp"
        android:layout_height="45dp"
       />

    <TextView
        android:id="@+id/lblProducao"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="Produção Média/Mês"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black" />

    <Spinner
        android:id="@+id/ddlProducao"
        android:layout_width="400dp"
        android:layout_height="45dp"
     />
    


    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="Load Maps" />

   
    </LinearLayout>    

  
    
      </android.support.v4.widget.DrawerLayout>
  
    

 

 
     
 


