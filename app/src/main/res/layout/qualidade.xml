<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/WHITE"
    android:theme="@android:style/Theme.DeviceDefault.Light.DarkActionBar"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="700dp"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView37"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="#000"
            android:gravity="center_vertical"
            android:text="  QUALIDADE"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/WHITE"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/GRAY"
            android:gravity="center_vertical"
            android:text="1 - FAZ USO DO TESTE DE CMT MENSALMENTE EM TODAS AS VACAS? "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView35"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="2 - FAZ USO DO TESTE DE CANECA DE FUNDO PRETO DIARIAMENTE EM TODAS AS VACAS? "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView36"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/GRAY"
            android:gravity="center_vertical"
            android:text="3 - MANTEM A CORRETA HIGIENIZAÇÃO DOS AMBIENTES DE ORDENHA(ESPERA, ORDENHA)? "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView41"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="4 - MANTÉM CORRETA HIGIENIZAÇÃO E LIMPEZA DOS EQUIPAMENTOS DE ORDENHA? "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#000"
            android:gravity="bottom"
            android:text="FIM CHECK LIST"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/WHITE"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="*TODAS PERGUNTAS DEVEM SER RESPONDIDAS"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/ORANGE"
            android:textSize="13dp"
            android:textStyle="bold"
            android:visibility="invisible" />
        
         <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        <Button
            android:id="@+id/btnSalvarQual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ORANGE"
            android:text="SALVAR CHECKLIST"
            android:textColor="@color/WHITE"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#000"
            android:gravity="center|left"
            android:text="   NÃO     PARCIAL      SIM"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/WHITE"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/ddl19"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/GRAY" />

        <Spinner
            android:id="@+id/ddl20"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/WHITE" />

        <Spinner
            android:id="@+id/ddl21"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/GRAY" />

        <Spinner
            android:id="@+id/ddl22"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/WHITE" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/IBS"
            android:gravity="bottom"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/WHITE"
            android:textSize="15dp"
            android:textStyle="bold" />
        
         <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        <Button
            android:id="@+id/btnCanQual"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0.00"
            android:text="CANCELAR" />

    </LinearLayout>

</LinearLayout>