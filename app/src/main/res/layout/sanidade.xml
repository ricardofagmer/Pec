<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/WHITE"
    android:theme="@android:style/Theme.DeviceDefault.Light.DarkActionBar"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="700dp"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView111"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#000"
            android:gravity="center_vertical"
            android:text="  SANIDADE DO REBANHO"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/WHITE"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView40"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="1 - OS ANIMAIS SE APRESENTAM SAÚDAVEIS COM RELAÇÃO A CASCOS E LOCOMOÇÕES?"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/GRAY"
            android:gravity="center_vertical"
            android:text="2 - AS VACAS EM PRODUÇÃO SE APRESENTAM SAUDÁVEIS COM RELAÇÃO AO ÚBERE?"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="3 - MANTÉM DIA O CRONOGRAMA SANITÁRIO? (VACINAS OBRIGATÓRIAS)"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/GRAY"
            android:gravity="center_vertical"
            android:text="4 - TEM PROBLEMAS COM ECTOPARASITAS?"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="5 - OS PRODUTOS VETERINÁRIOS SÃO ARAMAZENADOS CORRETAMENTE?"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/lblMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="*TODAS PERGUNTAS DEVEM SER RESPONDIDAS"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/ORANGE"
            android:textSize="13dp"
            android:textStyle="bold"
            android:visibility="invisible" />

 <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1" />
        <Button
            android:id="@+id/btnSalvaSanidade"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_weight="0.00"
            android:background="@color/ORANGE"
            android:text="SALVAR"
            android:textColor="@color/WHITE"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#000"
            android:gravity="center|left"
            android:text="   NÃO     PARCIAL      SIM"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/WHITE"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/ddl10"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/WHITE" />

        <Spinner
            android:id="@+id/ddl11"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/GRAY" />

        <Spinner
            android:id="@+id/ddl12"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/WHITE" />

        <Spinner
            android:id="@+id/ddl13"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/GRAY" />

        <Spinner
            android:id="@+id/ddl14"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/WHITE" />
 <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1" />
        <Button
            android:id="@+id/btnCanSanidade"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0.00"
            android:text="CANCELAR" />

    </LinearLayout>



</LinearLayout>